{% extends 'layouts/base.twig' %}

{% block pageTitle %}
    Hosts
{% endblock %}

{% block styles %}
    <link rel="stylesheet" href="/css/base.css">
{% endblock %}

{% block content %}
    <div class="mt-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ url_for('home') }}">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Hosts</li>
            </ol>
        </nav>
    </div>
    <div class="row justify-content-center margin-top-minus-10">

        {% for host in hosts %}
            <div class="card host-card me-3 mb-3">
                <img src="{{ host.profile_picture ? host.profile_picture : '/uploads/profile-pictures/0.jpg' }}" class="card-img-top mt-2 host-card-picture" alt="{{ host.getFullName() }} Host Picture">
                <div class="card-body text-center">
                    <h5 class="card-title mt-1 mb-3">{{ host.getFullName() }}</h5>
                    <a href="{{ url_for('host.details', { username: host.username }) }}" class="btn btn-primary">View Details</a>
                </div>
            </div>
        {% endfor %}

    </div>
{% endblock %}

{% block scripts %}
    <script src="/js/hosts.js"></script>
{% endblock %}
