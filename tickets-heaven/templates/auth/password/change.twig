{% extends 'layouts/base.twig' %}

{% block pageTitle %}
    Change Password
{% endblock %}

{% block styles %}
    <link rel="stylesheet" href="/css/base.css">
{% endblock %}

{% block content %}
    <div class="mt-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ url_for('home') }}">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Change Password</li>
            </ol>
        </nav>
    </div>
    <div class="card bg-light border-0 margin-top-minus-10">
        <article class="card-body medium-card-body mx-auto">
            <h4 class="card-title text-center margin-top-minus-10">Change Password</h4>
            <p class="text-center">Change your existing password</p>
            
            <form id="password-change-form" action="{{ url_for('password.change') }}" method="post">

                <div class="form-group input-group mb-1 has-validation">
                    <div class="input-group-prepend">
                        <span class="input-group-text" title="Current password"><i class="fa fa-lock"></i></span>
                    </div>

                    <input required type="password" id="password-old" name="password_old" class="form-control" placeholder="Current password">

                    <div class="input-group-append">
                        <button type="button" title="Clear value" class="btn btn-info clear-button"><i class="fa fa-copy"></i></button>
                    </div>
                </div>

                <div class="form-group input-group mb-1 has-validation">
                    <div class="input-group-prepend">
                        <span class="input-group-text" title="New password"><i class="fa fa-lock"></i></span>
                    </div>

                    <input required type="password" id="password" name="password" class="form-control" placeholder="New password">

                    <div class="input-group-append">
                        <button type="button" title="Clear value" class="btn btn-info clear-button"><i class="fa fa-copy"></i></button>
                    </div>
                </div>
                <br>

                <div class="form-group">
                    <button type="submit" id="password-change-button" class="btn btn-primary btn-block">Change Password</button>
                </div>

                {{ csrf.ajax | raw }}

            </form>
        </article>
    </div>
{% endblock %}

{% block scripts %}
    <script src="/js/auth/password/change.js"></script>
{% endblock %}
