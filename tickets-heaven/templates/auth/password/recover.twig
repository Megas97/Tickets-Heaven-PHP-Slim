{% extends 'layouts/base.twig' %}

{% block pageTitle %}
    Recover Password
{% endblock %}

{% block styles %}
    <link rel="stylesheet" href="/css/base.css">
{% endblock %}

{% block content %}
    <div class="mt-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ url_for('home') }}">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Recover Password</li>
            </ol>
        </nav>
    </div>
    <div class="card bg-light border-0 margin-top-minus-10">
        <article class="card-body medium-card-body mx-auto">
            <h4 class="card-title text-center margin-top-minus-10">Recover Password</h4>
            <p class="text-center">Recover a forgotten password</p>

            <form id="password-recover-form" action="{{ url_for('password.recover') }}" method="post">

                <div class="form-group input-group mb-1 has-validation">
                    <div class="input-group-prepend">
                        <span class="input-group-text" title="Email"><i class="fa fa-envelope"></i></span>
                    </div>

                    <input required type="email" id="email" name="email" class="form-control" value="" placeholder="Email">

                    <div class="input-group-append">
                        <button type="button" title="Clear value" class="btn btn-info clear-button"><i class="fa fa-copy"></i></button>
                    </div>
                </div>
                <br>
                
                <div class="form-group">
                    <button type="submit" id="password-recover-button" class="btn btn-primary btn-block">Recover Password</button>
                </div>
                <br>

                <p class="text-center">Have an account? <a href="{{ url_for('login') }}">Log In</a></p>
                <p class="text-center">Don't have an account? <a href="{{ url_for('register') }}">Register</a></p>

                {{ csrf.ajax | raw }}
                
            </form>
        </article>
    </div>
{% endblock %}

{% block scripts %}
    <script src="/js/auth/password/recover.js"></script>
{% endblock %}
