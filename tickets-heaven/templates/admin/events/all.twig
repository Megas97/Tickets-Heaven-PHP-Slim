{% extends 'layouts/base.twig' %}

{% block pageTitle %}
    Events
{% endblock %}

{% block styles %}
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.3.0/css/responsive.bootstrap5.css">
{% endblock %}

{% block content %}
    <div class="mt-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ url_for('home') }}">Home</a></li>
                <li class="breadcrumb-item"><a href="{{ url_for('admin.panel') }}">Admin Panel</a></li>
                <li class="breadcrumb-item active" aria-current="page">Events</li>
            </ol>
        </nav>
    </div>
    <div class="row mb-5 margin-top-minus-10">
        <div class="col-sm-12 text-center">
            <button type="button" id="add-event-button" name="add-event-button" class="btn btn-secondary d-inline-flex align-items-center"><i class="fa fa-plus me-2"></i>Add Event</button>
        </div>
    </div>

    <table id="eventsListTable" class="table w-100">
      <thead>
        <tr>
            <th>ID</th>
            <th>Image</th>
            <th>Name</th>
            <th class="min-desktop dropdown-filter">Start Date</th>
            <th class="min-desktop dropdown-filter">Start Time</th>
            <th class="min-desktop">Starts</th>
            <th class="min-desktop dropdown-filter">End Date</th>
            <th class="min-desktop dropdown-filter">End Time</th>
            <th class="min-desktop">Ends</th>
            <th class="dropdown-filter">Venue</th>
            <th class="dropdown-filter">Host</th>
            <th class="min-desktop">Actions</th>
        </tr>
      </thead>
    </table>

    {{ csrf.ajax | raw }}
    
{% endblock %}

{% block scripts %}
    <script src="/js/admin/events/all.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.3.0/js/dataTables.responsive.min.js"></script>
{% endblock %}
