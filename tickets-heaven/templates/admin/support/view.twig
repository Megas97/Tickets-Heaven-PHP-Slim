{% extends 'layouts/base.twig' %}

{% block pageTitle %}
    View Support Ticket
{% endblock %}

{% block styles %}
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/css/bootstrap-select.min.css">
{% endblock %}

{% block content %}
    <div class="mt-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ url_for('home') }}">Home</a></li>
                <li class="breadcrumb-item"><a href="{{ url_for('admin.panel') }}">Admin Panel</a></li>
                <li class="breadcrumb-item"><a href="{{ url_for('admin.support') }}">Support Tickets</a></li>
                <li class="breadcrumb-item active" aria-current="page">View Support Ticket</li>
            </ol>
        </nav>
    </div>
    <div class="card bg-light border-0 margin-top-minus-10">
        <article class="card-body mx-auto">
            <h4 class="card-title text-center margin-top-minus-10">Support Ticket</h4>
            <p class="text-center">Please reply to the given email as soon as possible with a solution to the problem</p>
            <div class="d-md-flex">
                <div class="col col-md-6 mx-auto pe-md-1">
                    <input disabled type="text" id="sender-email" class="form-control mb-1 w-100" value="{{ supportTicket.email }}" placeholder="Sender email">
                </div>
                <div class="col col-md-3 mx-auto pe-md-1">
                    <input disabled type="text"class="form-control mb-1 w-100" value="{{ supportTicket.first_name }}" placeholder="Sender first name">
                </div>
                <div class="col col-md-3 mx-auto">
                    <input disabled type="text" class="form-control mb-1 w-100"  value="{{ supportTicket.last_name }}" placeholder="Sender last name">
                </div>
            </div>
            <input disabled type="text" id="subject" name="subject" title="Subject" class="form-control mb-1" value="{{ supportTicket.subject }}">
            <textarea rows="7" disabled id="message" name="message" title="Message" class="form-control">{{ supportTicket.message }}</textarea>
            <div class="d-flex">
                <button type="button" id="support-ticket-delete-button" class="btn btn-danger me-auto mt-1">Delete</button>
                <button type="button" id="support-ticket-reply-button" class="btn btn-primary ms-auto mt-1">Reply</button>
            </div>
            <input type="hidden" id="current-id" name="current_id" value="{{ supportTicket.id }}">

            {{ csrf.ajax | raw }}

        </div>
    </div>
{% endblock %}

{% block scripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/js/bootstrap-select.min.js"></script>
    <script src="/js/admin/support/view.js"></script>
{% endblock %}
